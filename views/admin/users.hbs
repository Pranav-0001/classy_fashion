<div class="container d-none d-md-block">
     <h1 class="text-center pt-3">Users List</h1>
 <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Username</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
      <th scope="col">Status</th>
      
     
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      {{#if status}}
      <td><i class="fa-solid fa-user fs-4"></i></td>
      {{else}}
      <td><i class="fa-solid fa-user-slash text-danger fs-4"></i></td>
      {{/if}}
      <th >{{username}}</th>
      <td>{{phone}}</td>
      <td>{{email}}</td>
      <td>{{gender}}</td>
      {{#if status}}
      <td>Active</td>
      {{else}}
      <td class="text-danger">Blocked</td>
      {{/if}}
    <td class="">
        {{#if status}}
        <a href="/admin/ban-user/{{_id}}" onclick="return confirm('Do you want to Block {{username}}?')"  class="edt-btn bg-secondary pt-1 pb-1 ps-3 pe-3">Ban </a> 
        {{else}}
        <a href="/admin/unblock-user/{{_id}}" onclick="return confirm('Do you want to Unblock {{uname}}?')"  class="edt-btn bg-success pt-1 pb-1 ps-3 pe-3">Unban </a>  
        {{/if}}
    
         <a href="/admin/delete-user/{{_id}}"   onclick="return confirm('Do you want to Delete {{username}}?')" class="dlt-btn bg-danger pt-1 pb-1 ps-3 pe-3 ms-2" >Delete </a></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>

</div>


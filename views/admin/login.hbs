<div class="head-img">
    <h1 class="text-center text-white ">Admin Login</h1>
</div>
<div class="container mt-2 mt-5 pt-5">
    <div class="box1 mb-3 mt-3">
        
        <form action="/admin/login" method="post" class="p-3 mt-3">
            
            <div class="d-flex mb-3  pt-3" style="justify-content: center;">
                <input class="ms-3 ms-md-0" style="line-height: 40px;width: 70%;" type="text"
                    placeholder="Enter Your Email" name="email" value="{{data.email}}" >
            </div>
            <div class="d-flex mb-3" style="justify-content: center;">
                <input class="ms-3 ms-md-0" style="line-height: 40px;width: 70%;" type="text"
                    placeholder="Enter Your Password" name="password" value="{{data.password}}">
            </div>
            <div class="text-center">
                <p class="text-danger">{{err}}</p>
                <button type="submit" class="signup-btn ">Login</button>
               

            </div>
        </form>
    </div>
</div>
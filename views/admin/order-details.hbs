<div class="container mt-4 ">
    <div class="row">
        <div class="col-md-6 border d-flex" style="overflow-x: scroll; overflow-y: hidden;">
            {{#each order.products}}
            <div class="card pt-2 me-2" style="min-width: 10rem;">
                <img class="card-img-top" src="/product-images/{{product.Images.[0]}}.jpg" alt="Card image cap">
                <div class="card-body">
                    <small   class="card-title">{{product.product}}</small>
                    <p class="card-text">Qty : {{quantity}}</p>
                </div>
            </div>
           {{/each}}
        </div>
        <div class="col-md-6 border">
            <h3 class="mt-3">Shipping Address</h3>
            <div class="ms-4">
                <h5 class="mt-4 ">{{order.Address.name}},</h5>
            <h5 class="">{{order.Address.address}},</h5>
            <h5 class="">{{order.Address.town}},</h5>
            <h5 class="">{{order.Address.state}},</h5>
            <h5 class="">{{order.Address.pincode}},</h5>
             <h5 class="">{{order.Address.phone}},</h5>
              <h5 class="">{{order.Address.email}}</h5>
            </div>

        </div>
        <div class="col-md-6 border">
            <h3 class="mt-3">Payment Details</h3><br>
            <h5 class="">Total Amount : {{order.subTotal}}</h5>
            <h5>Payable Amount : {{order.discTotal}}</h5>
            <h5 class="">Payment Method : {{order.Address.payment}}</h5>
            <h5>Payment Status :</h5>
        </div>
        <div class="col-md-6 border">
            <form action="" class="pb-3">
                <h3>Update order status</h3>
                <div class="ms-4 pb-3">
                    <div class="d-flex mt-3">
                        <input type="radio" name="orderStatus" style="width: 25px;height: 25px;"> <label class="ms-2" for="">Pending</label>

                    </div>
                    <div class="d-flex mt-3">
                        <input type="radio" name="orderStatus" style="width: 25px;height: 25px;"> <label class="ms-2" for="">Order Placed</label>
                        
                    </div>
                    <div class="d-flex mt-3">
                        <input type="radio" name="orderStatus" style="width: 25px;height: 25px;"> <label class="ms-2" for="">Shipped</label>
                        
                    </div>
                    <div class="d-flex mt-3">
                        <input type="radio" name="orderStatus" style="width: 25px;height: 25px;"> <label class="ms-2" for="">Out for delivery</label>
                        
                    </div>
                    <div class="d-flex mt-3">
                        <input type="radio" name="orderStatus" style="width: 25px;height: 25px;"> <label class="ms-2" for="">Delivered</label>
                        
                    </div>
                </div>
                <input type="submit" class="ms-4 bg-dark text-white pt-2 pb-2 ps-3 pe-3" value="Update Status">
            </form>
        </div>
    </div>
</div>
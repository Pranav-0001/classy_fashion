<div class="container mt-4 ">
    <div class="row">
        <div class="col-md-4 ">
            <img id="main-img" src="/product-images/{{product.Images.[0]}}.jpg" alt="" width="100%">
            <div class="d-flex mt-2">
                {{#each product.Images}}
                <img id="{{[]}}" src="/product-images/{{[]}}.jpg" alt="" width="60px" class="ms-2" onclick="imgClick(this.id)">
                {{/each}}
            </div>
        </div>
        <div class="col-md-6">
            <h1>{{product.product}}</h1>
            <h3 class="text-secondary">{{product.brand}}</h3>
            <br>
            <h3>4.5 <i class="fa-regular fa-star text-success"></i> | 2K Ratings</h3>

            <hr style="background-color: gray;">
           
            <select name="" id="" class="mb-2" style="font-size: large; text-align: center; height: 60px;width: 60px;border-radius: 40px;">
                <option value="" > Size</option>
                {{#each product.size}}
                <option value="{{[]}}">{{[]}}</option>
                {{/each}}
            </select>
            <h3>â‚¹ {{product.offerPrice}} <span class="text-secondary" style="text-decoration: line-through;">MRP{{product.price}}</span></h3>
            <h3 class="text-success">{{product.discount}}% <span class="text-dark fs-5">flat discount</span></h3>
            <h4 class="text-success">Save {{product.savings}}</h4>
            <h4 class="text-secondary">{{product.category}}</h4>
            <p class="fs-5">{{product.description}}</p>
            <br>
            <br>
            <div class="d-flex">
                
                <a href="" class="addToCart bg-danger text-light ps-4 pe-4 pt-3 pb-3"><i class="fa-regular fa-heart"></i> Add To Wishlist</a>
                <a href="/add-to-cart/{{product._id}}" class="addToCart bg-dark text-light ps-5 pe-5 pt-3 pb-3 ms-2"><i class="fa-solid fa-bag-shopping"></i>  Add To Cart</a>
            </div>
        </div>

    </div>
</div>

<script>
    function imgClick(id){

        let img=document.getElementById(id).src
        document.getElementById('main-img').src=img

    }
</script>
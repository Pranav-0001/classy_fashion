<div class="container">
    <a href="" class="btn float-end btn-success mt-3">Add Address</a>
</div>

{{#if address}}
<div class="container mt-5">
    {{#each address}}
<div class="card border" style="width: 18rem;">
  <div class="card-body">
  
    <h6 class="card-subtitle mb-2 text-dark">{{name}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">{{address}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">{{town}}</h6>
   
    <h6 class="card-subtitle mb-2 text-muted">{{state}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">{{pincode}}</h6>
     <h6 class="card-subtitle mb-2 text-muted">{{phone}}</h6>
      <h6 class="card-subtitle mb-2 text-muted">{{email}}</h6>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
    {{/each}}
</div>
{{else}}
<div class="container bg-img-address d-flex justify-content-center" style="width: 100%;height: 70vh;">
<h3 class="mt-3  pt-3" style="color: #5b358d;">No saved addresses</h3>
</div>
{{/if}}